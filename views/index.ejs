<!DOCTYPE html>
<html ng-app="quizApp" ng-controller="mainController">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Application</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <!--Angular stuff comes here-->
    <script src="https://code.angularjs.org/1.6.4/angular.min.js"></script>
    <script src="/javascripts/controllers/main.js"></script>
  </head>
  <body>
  <h1 style="padding:5%;background-color:#0275d8;color:#ffffff; font-family: 'Raleway', sans-serif;"> Quiz Application</h1>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-xm-12" ng-init="getQuestion()">
        <div class="card">
          <div class="container" ng-if="data.questionNumber<=5">
            <h4>Q{{question.qno}}. {{question.que}}</h4>
            <form ng-submit="verifyAnswer()" class="form-group">
              <div class="radio" ng-repeat="option in question.options">
                <label>
                  <input type="radio" name="answer" value="{{option }}" ng-model="$parent.$parent.answer">
                  {{option}}
                </label>
              </div>
              <div class="next-button-container" align="center">
                <button class="btn btn-outline-primary">Next -></button>
              </div>
            </form>
          </div>
        </div>
            <div ng-if="data.questionNumber>5" align="center" style="margin-top:5%;">
                <p class="text-danger"><b>TOTAL : {{data.total}} / {{data.summary.length}}.</b></p><br>
                <h3>Summary</h3>
                <div class="card" ng-repeat="response in data.summary" style="margin-bottom : 5%;">
                    <div class="container">
                        <h4>Q{{response.question.qno}}. {{response.question.que}}</h4>
                        <div style="padding:5%;">
                            <p>Your answer : <b>{{response.answered}}</b></p>
                            <p>Correct Answer : <b>{{response.correctAns}}</b></p>

                            <div class="alert alert-success" role="alert" ng-if="response.status ==1"><b>Correct Answer</b></div>
                            <div class="alert alert-danger" role="alert" ng-if="response.status ==0"><b>Incorrect Answer</b></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
